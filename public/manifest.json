{
  "manifest_version": 3,
  "name": "Veritas Network",
  "version": "0.0.6",
  "description": "Track the accuracy of future predictions or factuality statements on Twitter. Crypto prices, conspiracy theories or simply weather tomorrow. Decentralized.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "./logo16.png",
    "32": "./logo32.png",
    "48": "./logo48.png",
    "128": "./logo128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*"
      ],
      "js": [
        "./static/js/content.js"
      ],
      "css": [
        "./static/css/content.css"
      ]
    }
  ]
}