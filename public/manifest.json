{
  "manifest_version": 3,
  "name": "Veritas Network",
  "version": "0.0.6",
  "description": "Truth search engine. Compete, earn reputation and find truth before everyone else.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "./logo16.png",
    "32": "./logo32.png",
    "48": "./logo48.png",
    "128": "./logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["./static/js/content.js"],
      "css": ["./static/css/content.css"]
    }
  ]
}
